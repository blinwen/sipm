<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="fill_parent"
    android:layout_height="52dip"
    android:gravity="center_vertical"
    android:background="@drawable/foot_bg_blue"
    android:padding="0.0px" 
    android:orientation="horizontal">
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:gravity="center"
        android:orientation="vertical">
	    <Button 
	        android:paddingTop="4dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/foot_button_bg_selector"
	        android:textColor="@color/white"
	        android:text="@string/next_question"
	        android:textSize="13sp"
	        android:id="@+id/btn_next_exam_item"
	        android:drawableTop="@drawable/foot_next_selector"
	        android:paddingLeft="20sp"
	        android:paddingRight="20sp"/>

	</LinearLayout>
	
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:gravity="center"
        android:orientation="vertical">
		<Button 
		    android:paddingTop="4dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:drawableTop="@drawable/foot_answer_selector"
	        android:background="@drawable/foot_button_bg_selector"
	        android:text="@string/answer"
	        android:textSize="13sp"
	        android:textColor="@color/white"
	        android:paddingLeft="20sp"
	        android:paddingRight="20sp"
	        android:id="@+id/btn_item_answer"/>

		</LinearLayout>
</LinearLayout>