<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/welcome_bg" >
    
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0sp"
	    android:layout_weight="20"
	    android:background="@android:color/transparent"></LinearLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0sp"
	    android:layout_weight="80"
	    android:layout_gravity="center"
	    android:gravity="center">
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/ic_launcher_log"
	        android:contentDescription="@string/app_name"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0sp"
	    android:layout_weight="80"
	    android:paddingTop="18sp"
	    android:orientation="vertical"
	    android:gravity="center_horizontal|top">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/app_name"
	        android:textSize="20sp"
	        android:textColor="@color/gray2"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/full_name_ext"
	        android:textSize="20sp"
	        android:textColor="@color/gray2"/>

	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0sp"
	    android:layout_weight="60"
	    android:background="@android:color/transparent">
	    
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0sp"
	    android:layout_weight="80"
	    android:gravity="center_horizontal|top">
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/wish"
	        android:contentDescription="@string/app_name"/>
	</LinearLayout>
	
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0sp"
	    android:layout_weight="30"
	    android:gravity="center"
	    android:orientation="vertical">
	    
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/gray"
		    android:text="@string/copyright_welcome"
		    android:textSize="12sp"/>
		
		<TextView 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/gray"
		    android:text="@string/reserved"
		    android:textSize="12sp"/>
	</LinearLayout>
	
</LinearLayout>
